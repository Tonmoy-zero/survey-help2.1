modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Survey Chatbot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Debug Chatbot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Interactive Survey Chatbot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Input Test"

[[workflows.workflow]]
name = "Survey Chatbot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Debug Chatbot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python debug_chat.py"

[[workflows.workflow]]
name = "Interactive Survey Chatbot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -u main.py"

[[workflows.workflow]]
name = "Input Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -u test_input.py"

[deployment]
run = ["sh", "-c", "python main.py"]
